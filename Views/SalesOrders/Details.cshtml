@model SIOMS.Models.SalesOrder

<h1>Sales Order Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.SalesOrderId</dd>
        
        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Product?.Name</dd>
        
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>
        
        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount.ToString("C")</dd>
        
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SalesOrderId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>