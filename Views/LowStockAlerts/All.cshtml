@model IEnumerable<SIOMS.Models.LowStockAlert>
<h2>All Stock Alerts</h2>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Current</th>
            <th>Minimum</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alert in Model)
        {
            <tr>
                <td>@alert.Product?.Name</td>
                <td>@alert.CurrentStock</td>
                <td>@alert.MinimumStockLevel</td>
                <td>@alert.AlertDate.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (alert.IsResolved)
                    {
                        <span class="badge bg-success">Resolved</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Active</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/LowStockAlerts">Back to Active Alerts</a>