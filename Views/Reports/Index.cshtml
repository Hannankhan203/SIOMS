@{
    ViewData["Title"] = "Reports";
}

<h1>Reports Dashboard</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Sales Report</h5>
                <p class="card-text">View sales orders, revenue, and trends.</p>
                <a asp-action="Sales" class="btn btn-primary">View Sales Report</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Inventory Report</h5>
                <p class="card-text">Check stock levels and inventory value.</p>
                <a asp-action="Inventory" class="btn btn-primary">View Inventory Report</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Profit & Loss</h5>
                <p class="card-text">Revenue, costs, and profitability analysis.</p>
                <a asp-action="ProfitLoss" class="btn btn-primary">View P&L Report</a>
            </div>
        </div>
    </div>
</div>