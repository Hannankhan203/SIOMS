@model SIOMS.Models.Supplier

<h1>Delete Supplier</h1>

<h3>Are you sure you want to delete this supplier?</h3>
<div>
    <h4>@Model.CompanyName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Contact Person</dt>
        <dd class="col-sm-10">@Model.ContactPerson</dd>
        
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SupplierId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>