@model SIOMS.Models.StockMovement

@{
    ViewData["Title"] = "Create Stock Movement";
    var products = ViewBag.Products as List<SIOMS.Models.Product>;
    var movementTypes = ViewBag.MovementTypes as List<string>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-plus"></i> @ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Movement Details</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ProductId" class="control-label">Product *</label>
                                    <select asp-for="ProductId" class="form-control" required>
                                        <option value="">-- Select Product --</option>
                                        @if (products != null)
                                        {
                                            @foreach (var product in products)
                                            {
                                                <option value="@product.ProductId">@product.Name (@product.SKU) - Stock: @product.StockQuantity</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="ProductId" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="MovementType" class="control-label">Movement Type *</label>
                                    <select asp-for="MovementType" class="form-control" required>
                                        <option value="">-- Select Type --</option>
                                        @if (movementTypes != null)
                                        {
                                            @foreach (var type in movementTypes)
                                            {
                                                <option value="@type">@type</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="MovementType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Quantity" class="control-label">Quantity *</label>
                                    <input asp-for="Quantity" class="form-control" type="number" min="1" required />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="UnitPrice" class="control-label">Unit Price</label>
                                    <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="MovementDate" class="control-label">Movement Date</label>
                                    <input asp-for="MovementDate" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="MovementDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="SourceLocation" class="control-label">Source Location</label>
                                    <input asp-for="SourceLocation" class="form-control" />
                                    <span asp-validation-for="SourceLocation" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DestinationLocation" class="control-label">Destination Location</label>
                                    <input asp-for="DestinationLocation" class="form-control" />
                                    <span asp-validation-for="DestinationLocation" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ReferenceNumber" class="control-label">Reference Number</label>
                                    <input asp-for="ReferenceNumber" class="form-control" />
                                    <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Notes" class="control-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Movement
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Movement Types</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-2"></i> Types Explained:</h6>
                        <ul class="mb-0">
                            <li><strong>IN</strong>: Stock coming in (Purchase, Return)</li>
                            <li><strong>OUT</strong>: Stock going out (Sale, Damage)</li>
                            <li><strong>TRANSFER</strong>: Moving stock between locations</li>
                            <li><strong>ADJUSTMENT</strong>: Manual stock correction</li>
                        </ul>
                    </div>
                    
                    <div class="alert alert-warning">
                        <h6><i class="fas fa-exclamation-triangle me-2"></i> Important:</h6>
                        <p class="mb-0">
                            Stock levels will be automatically updated based on the movement type.
                            IN/TRANSFER-IN increases stock, OUT/TRANSFER-OUT decreases stock.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Set default movement date to now
        document.addEventListener('DOMContentLoaded', function() {
            const movementDateField = document.getElementById('MovementDate');
            if (!movementDateField.value) {
                const now = new Date();
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                movementDateField.value = now.toISOString().slice(0, 16);
            }
        });
    </script>
}