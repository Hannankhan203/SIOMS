@model IEnumerable<SIOMS.Models.Product>
@{
    ViewData["Title"] = "Products";
    ViewBag.Controller = "Products";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div>
            <h1 class="h2 mb-1"><i class="fas fa-box text-primary me-2"></i> Products</h1>
            <p class="text-muted mb-0">Manage your inventory products and stock levels.</p>
        </div>
        <div class="mt-3 mt-md-0">
            <div class="btn-group" role="group">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i> New Product
                </a>
                <button type="button" class="btn btn-outline-primary dropdown-toggle dropdown-toggle-split" 
                        data-bs-toggle="dropdown">
                    <span class="visually-hidden">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-file-import me-2"></i> Import Products</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-file-export me-2"></i> Export Products</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-print me-2"></i> Print List</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Filter Card -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <input type="text" class="form-control" name="search" placeholder="Search products..." 
                           value="@ViewBag.Search">
                </div>
                <div class="col-md-2">
                    <select class="form-select" name="category">
                        <option value="">All Categories</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.CategoryId" selected="@(ViewBag.CategoryId == category.CategoryId)">
                                @category.Name
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select" name="stockStatus">
                        <option value="">All Stock</option>
                        <option value="low" selected="@(ViewBag.StockStatus == "low")">Low Stock</option>
                        <option value="out" selected="@(ViewBag.StockStatus == "out")">Out of Stock</option>
                        <option value="good" selected="@(ViewBag.StockStatus == "good")">Good Stock</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select" name="sort">
                        <option value="name">Sort by Name</option>
                        <option value="stock" selected="@(ViewBag.Sort == "stock")">Sort by Stock</option>
                        <option value="price" selected="@(ViewBag.Sort == "price")">Sort by Price</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-2"></i> Apply Filters
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Total Products</h6>
                            <h3 class="mb-0">@Model.Count()</h3>
                        </div>
                        <div class="icon-circle bg-white bg-opacity-25">
                            <i class="fas fa-box fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Low Stock</h6>
                            <h3 class="mb-0">@Model.Count(p => p.StockQuantity <= p.MinimumStockLevel)</h3>
                        </div>
                        <div class="icon-circle bg-white bg-opacity-25">
                            <i class="fas fa-exclamation-triangle fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Out of Stock</h6>
                            <h3 class="mb-0">@Model.Count(p => p.StockQuantity == 0)</h3>
                        </div>
                        <div class="icon-circle bg-white bg-opacity-25">
                            <i class="fas fa-times-circle fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Total Value</h6>
                            <h3 class="mb-0">@Model.Sum(p => p.StockQuantity * p.BuyingPrice).ToString("C")</h3>
                        </div>
                        <div class="icon-circle bg-white bg-opacity-25">
                            <i class="fas fa-dollar-sign fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Table -->
    <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Product List</h5>
            <div class="text-muted">
                Showing @Model.Count() products
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 datatable">
                    <thead>
                        <tr>
                            <th class="ps-4">Product</th>
                            <th>Category</th>
                            <th>Supplier</th>
                            <th>Current Stock</th>
                            <th>Buying Price</th>
                            <th>Selling Price</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var stockStatus = item.StockQuantity <= item.MinimumStockLevel ? "Low" : 
                                             item.StockQuantity == 0 ? "Out" : "Good";
                            var statusColor = item.StockQuantity <= item.MinimumStockLevel ? "warning" : 
                                             item.StockQuantity == 0 ? "danger" : "success";
                            var stockPercent = item.MinimumStockLevel > 0 ? 
                                (item.StockQuantity * 100) / (item.MinimumStockLevel * 2) : 100;
                            stockPercent = Math.Min(stockPercent, 100);
                            
                            <tr class="hover-lift" data-href="@Url.Action("Details", new { id = item.ProductId })">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="product-icon bg-light rounded p-2 me-3">
                                            <i class="fas fa-box text-primary"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@item.Name</h6>
                                            <small class="text-muted">@item.SKU</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (item.Category != null)
                                    {
                                        <span class="badge bg-light text-dark">@item.Category.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Supplier != null)
                                    {
                                        <small>@item.Supplier.CompanyName</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="me-2">@item.StockQuantity</span>
                                        <div class="progress flex-grow-1" style="height: 6px;">
                                            <div class="progress-bar bg-@statusColor" style="width: @stockPercent%"></div>
                                        </div>
                                    </div>
                                </td>
                                <td class="fw-bold">@item.BuyingPrice.ToString("C")</td>
                                <td class="fw-bold text-success">@item.SellingPrice.ToString("C")</td>
                                <td>
                                    <span class="badge bg-@statusColor">@stockStatus Stock</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.ProductId" 
                                           class="btn btn-outline-info" data-bs-toggle="tooltip" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.ProductId" 
                                           class="btn btn-outline-warning" data-bs-toggle="tooltip" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="UpdateStock" asp-route-id="@item.ProductId"
                                           class="btn btn-outline-secondary" data-bs-toggle="tooltip" title="Update Stock">
                                            <i class="fas fa-warehouse"></i>
                                        </a>
                                        <a asp-controller="SalesOrders" asp-action="Create" 
                                           asp-route-productId="@item.ProductId" 
                                           class="btn btn-outline-success" data-bs-toggle="tooltip" title="Sell Product">
                                            <i class="fas fa-cash-register"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
            <div class="text-muted">
                <small>Last updated: @DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")</small>
            </div>
            <div>
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
                    <i class="fas fa-print me-2"></i> Print
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize DataTable with search
        $(document).ready(function() {
            $('.datatable').DataTable({
                responsive: true,
                pageLength: 25,
                order: [[0, 'asc']],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search products..."
                },
                columnDefs: [
                    { orderable: false, targets: [1, 2, 6, 7] },
                    { searchable: false, targets: [1, 2, 4, 5, 6, 7] }
                ]
            });
            
            // Row click for mobile
            if ($(window).width() < 768) {
                $('tr[data-href]').css('cursor', 'pointer').on('click', function() {
                    window.location = $(this).data('href');
                });
            }
            
            // Export functionality
            $('#exportBtn').click(function() {
                // Export logic here
                showToast('Export started successfully', 'info');
            });
        });
        
        // Quick actions
        function quickAction(productId, action) {
            switch(action) {
                case 'sell':
                    window.location.href = '@Url.Action("Create", "SalesOrders")?productId=' + productId;
                    break;
                case 'update':
                    window.location.href = '@Url.Action("UpdateStock", "Products")?id=' + productId;
                    break;
                case 'view':
                    window.location.href = '@Url.Action("Details", "Products")?id=' + productId;
                    break;
            }
        }
    </script>
}