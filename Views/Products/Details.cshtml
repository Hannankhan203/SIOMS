@model SIOMS.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-box"></i> Product Details
        </h1>
        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="UpdateStock" asp-route-id="@Model.ProductId" class="btn btn-secondary">
                <i class="fas fa-warehouse"></i> Update Stock
            </a>
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Product Information Card -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Product Information</h6>
                    <span class="badge @(Model.StockQuantity <= Model.MinimumStockLevel ? "bg-warning" : Model.StockQuantity == 0 ? "bg-danger" : "bg-success")">
                        @(Model.StockQuantity <= Model.MinimumStockLevel ? "Low Stock" : Model.StockQuantity == 0 ? "Out of Stock" : "In Stock")
                    </span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Product Name:</th>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <th>SKU:</th>
                                    <td>@Model.SKU</td>
                                </tr>
                                <tr>
                                    <th>Category:</th>
                                    <td>@Model.Category?.Name</td>
                                </tr>
                                <tr>
                                    <th>Supplier:</th>
                                    <td>@Model.Supplier?.CompanyName</td>
                                </tr>
                                <tr>
                                    <th>Description:</th>
                                    <td>@Model.Description</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Buying Price:</th>
                                    <td>@Model.BuyingPrice.ToString("C")</td>
                                </tr>
                                <tr>
                                    <th>Selling Price:</th>
                                    <td>@Model.SellingPrice.ToString("C")</td>
                                </tr>
                                <tr>
                                    <th>Current Stock:</th>
                                    <td>
                                        <span class="@(Model.StockQuantity <= Model.MinimumStockLevel ? "text-warning font-weight-bold" : Model.StockQuantity == 0 ? "text-danger font-weight-bold" : "text-success font-weight-bold")">
                                            @Model.StockQuantity units
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Minimum Stock Level:</th>
                                    <td>@Model.MinimumStockLevel units</td>
                                </tr>
                                <tr>
                                    <th>Created Date:</th>
                                    <td>@Model.CreatedDate.ToString("dd MMM yyyy")</td>
                                </tr>
                                <tr>
                                    <th>Last Updated:</th>
                                    <td>@(Model.UpdatedDate?.ToString("dd MMM yyyy") ?? "Never")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    
                    <!-- Stock Status Progress Bar -->
                    <div class="mt-4">
                        <h6 class="font-weight-bold">Stock Status</h6>
                        @{
                            var stockPercentage = Model.MinimumStockLevel > 0 ? 
                                (Math.Min(Model.StockQuantity, Model.MinimumStockLevel * 2) * 100) / (Model.MinimumStockLevel * 2) : 
                                (Model.StockQuantity > 0 ? 100 : 0);
                            var stockColor = Model.StockQuantity <= Model.MinimumStockLevel ? "bg-warning" : 
                                            Model.StockQuantity == 0 ? "bg-danger" : "bg-success";
                        }
                        <div class="progress mb-2" style="height: 25px;">
                            <div class="progress-bar @stockColor" role="progressbar" 
                                 style="width: @stockPercentage%;" 
                                 aria-valuenow="@stockPercentage" 
                                 aria-valuemin="0" 
                                 aria-valuemax="100">
                                @Model.StockQuantity / @Model.MinimumStockLevel units
                            </div>
                        </div>
                        <small class="text-muted">
                            @if (Model.StockQuantity <= Model.MinimumStockLevel)
                            {
                                <i class="fas fa-exclamation-triangle text-warning"></i> 
                                <span class="text-warning">Low stock alert! Reorder needed.</span>
                            }
                            else if (Model.StockQuantity == 0)
                            {
                                <i class="fas fa-times-circle text-danger"></i> 
                                <span class="text-danger">Out of stock! Urgent reorder required.</span>
                            }
                            else
                            {
                                <i class="fas fa-check-circle text-success"></i> 
                                <span class="text-success">Stock level is good.</span>
                            }
                        </small>
                    </div>
                </div>
            </div>

            <!-- Stock Movements Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-exchange-alt"></i> Recent Stock Movements
                    </h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.StockMovements != null && ((List<SIOMS.Models.StockMovement>)ViewBag.StockMovements).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Type</th>
                                        <th>Quantity</th>
                                        <th>Reference</th>
                                        <th>User</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var movement in (List<SIOMS.Models.StockMovement>)ViewBag.StockMovements)
                                    {
                                        <tr>
                                            <td>@movement.MovementDate.ToString("dd MMM yyyy HH:mm")</td>
                                            <td>
                                                @if (movement.MovementType == "Purchase")
                                                {
                                                    <span class="badge bg-success">Purchase</span>
                                                }
                                                else if (movement.MovementType == "Sale")
                                                {
                                                    <span class="badge bg-primary">Sale</span>
                                                }
                                                else if (movement.MovementType.Contains("Adjustment"))
                                                {
                                                    <span class="badge bg-info">Adjustment</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@movement.MovementType</span>
                                                }
                                            </td>
                                            <td class="@(movement.MovementType == "Purchase" || movement.MovementType == "Adjustment-In" ? "text-success" : "text-danger") font-weight-bold">
                                                @if (movement.MovementType == "Purchase" || movement.MovementType == "Adjustment-In")
                                                {
                                                    <span>+@movement.Quantity</span>
                                                }
                                                else
                                                {
                                                    <span>-@movement.Quantity</span>
                                                }
                                            </td>
                                            <td>@movement.ReferenceNumber</td>
                                            <td>@movement.UserId?.ToString() ?? "System")</td>
                                            <td>@movement.Notes</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("StockHistory", new { id = Model.ProductId })" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-history"></i> View Full History
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-exchange-alt fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No stock movements recorded yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Actions Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-bolt"></i> Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="UpdateStock" asp-route-id="@Model.ProductId" 
                           class="btn btn-outline-primary btn-block text-left mb-2">
                            <i class="fas fa-warehouse"></i> Update Stock
                        </a>
                        <a href="@Url.Action("Create", "PurchaseOrders")?productId=@Model.ProductId" 
                           class="btn btn-outline-success btn-block text-left mb-2">
                            <i class="fas fa-truck-loading"></i> Create Purchase Order
                        </a>
                        <a href="@Url.Action("Create", "SalesOrders")?productId=@Model.ProductId" 
                           class="btn btn-outline-info btn-block text-left mb-2">
                            <i class="fas fa-cash-register"></i> Create Sales Order
                        </a>
                        <button type="button" class="btn btn-outline-warning btn-block text-left mb-2" 
                                data-bs-toggle="modal" data-bs-target="#lowStockModal">
                            <i class="fas fa-exclamation-triangle"></i> Set Low Stock Alert
                        </button>
                        <a asp-action="Delete" asp-route-id="@Model.ProductId" 
                           class="btn btn-outline-danger btn-block text-left">
                            <i class="fas fa-trash"></i> Delete Product
                        </a>
                    </div>
                </div>
            </div>

            <!-- Stock Statistics Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-bar"></i> Stock Statistics
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="card border-left-primary h-100 py-2">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Stock Value
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @((Model.StockQuantity * Model.BuyingPrice).ToString("C"))
                                    </div>
                                    <small class="text-muted">Buying cost</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="card border-left-success h-100 py-2">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Sales Value
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @((Model.StockQuantity * Model.SellingPrice).ToString("C"))
                                    </div>
                                    <small class="text-muted">Potential revenue</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card border-left-warning h-100 py-2">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Profit Margin
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @{ 
                                            var margin = Model.BuyingPrice > 0 ? 
                                                ((Model.SellingPrice - Model.BuyingPrice) / Model.BuyingPrice * 100) : 0;
                                        }
                                        @margin.ToString("F1")%
                                    </div>
                                    <small class="text-muted">Per unit</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card border-left-info h-100 py-2">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Days of Stock
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @{
                                            // Assuming average sales of 5 units per day (this would come from actual sales data)
                                            var daysOfStock = Model.StockQuantity > 0 ? Model.StockQuantity / 5 : 0;
                                        }
                                        @daysOfStock days
                                    </div>
                                    <small class="text-muted">Estimated</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reorder Information Card -->
            @if (Model.StockQuantity <= Model.MinimumStockLevel)
            {
                <div class="card shadow mb-4 border-left-warning">
                    <div class="card-header py-3 bg-warning">
                        <h6 class="m-0 font-weight-bold text-white">
                            <i class="fas fa-exclamation-triangle"></i> Reorder Needed
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <h6 class="alert-heading"><i class="fas fa-bell"></i> Low Stock Alert!</h6>
                            <p>This product is below the minimum stock level.</p>
                            <hr>
                            <div class="row">
                                <div class="col-6">
                                    <strong>Current:</strong><br>
                                    <span class="h5 text-danger">@Model.StockQuantity units</span>
                                </div>
                                <div class="col-6">
                                    <strong>Minimum:</strong><br>
                                    <span class="h5">@Model.MinimumStockLevel units</span>
                                </div>
                            </div>
                            <div class="mt-3">
                                <strong>Recommended reorder quantity:</strong><br>
                                <span class="h4 text-primary">@(Model.MinimumStockLevel * 3) units</span>
                                <small class="text-muted d-block">(3x minimum stock level)</small>
                            </div>
                            <div class="mt-3">
                                <a href="@Url.Action("Create", "PurchaseOrders")?productId=@Model.ProductId&quantity=@(Model.MinimumStockLevel * 3)" 
                                   class="btn btn-warning btn-block">
                                    <i class="fas fa-truck"></i> Create Reorder
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Supplier Information Card -->
            @if (Model.Supplier != null)
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-truck"></i> Supplier Information
                        </h6>
                    </div>
                    <div class="card-body">
                        <h6 class="font-weight-bold">@Model.Supplier.CompanyName</h6>
                        <p class="mb-1">
                            <i class="fas fa-user"></i> @Model.Supplier.ContactPerson
                        </p>
                        @if (!string.IsNullOrEmpty(Model.Supplier.Phone))
                        {
                            <p class="mb-1">
                                <i class="fas fa-phone"></i> @Model.Supplier.Phone
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Supplier.Email))
                        {
                            <p class="mb-1">
                                <i class="fas fa-envelope"></i> 
                                <a href="mailto:@Model.Supplier.Email">@Model.Supplier.Email</a>
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Supplier.Address))
                        {
                            <p class="mb-1">
                                <i class="fas fa-map-marker-alt"></i> @Model.Supplier.Address
                            </p>
                        }
                        <div class="mt-3">
                            <a href="@Url.Action("Details", "Suppliers", new { id = Model.SupplierId })" 
                               class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-external-link-alt"></i> View Supplier Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Low Stock Alert Modal -->
<div class="modal fade" id="lowStockModal" tabindex="-1" aria-labelledby="lowStockModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lowStockModalLabel">
                    <i class="fas fa-exclamation-triangle"></i> Set Low Stock Alert
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="UpdateMinimumStock" asp-route-id="@Model.ProductId" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="minimumStockLevel">Minimum Stock Level</label>
                        <input type="number" class="form-control" id="minimumStockLevel" 
                               name="minimumStockLevel" value="@Model.MinimumStockLevel" 
                               min="0" max="10000" required>
                        <small class="form-text text-muted">
                            When stock falls below this level, the system will generate alerts.
                        </small>
                    </div>
                    <div class="alert alert-info mt-3">
                        <i class="fas fa-info-circle"></i>
                        <strong>Current stock:</strong> @Model.StockQuantity units<br>
                        <strong>Recommended:</strong> 10-20% of average monthly sales
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Alert Level</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Show confirmation before deleting
            $('a[href*="Delete"]').click(function(e) {
                if (!confirm('Are you sure you want to delete this product? This action cannot be undone.')) {
                    e.preventDefault();
                }
            });

            // Update stock level chart
            function updateStockChart() {
                var ctx = document.getElementById('stockChart').getContext('2d');
                var stockChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                        datasets: [{
                            label: 'Stock Level',
                            data: [120, 190, 130, 170, 150, @Model.StockQuantity],
                            borderColor: '#4e73df',
                            backgroundColor: 'rgba(78, 115, 223, 0.05)',
                            borderWidth: 2,
                            fill: true
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Units'
                                }
                            }
                        }
                    }
                });
            }

            // Initialize chart if element exists
            if (document.getElementById('stockChart')) {
                updateStockChart();
            }
        });
    </script>
}