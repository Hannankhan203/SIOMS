@model SIOMS.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-tags"></i> @ViewData["Title"]</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Category Information</h6>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-9">
                            <strong>@Html.DisplayFor(model => model.Name)</strong>
                        </dd>
                        
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Html.DisplayFor(model => model.Description)
                            }
                            else
                            {
                                <span class="text-muted">No description provided</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">
                            Total Products
                        </dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@Model.Products.Count products</span>
                        </dd>
                    </dl>
                </div>
            </div>

            @if (Model.Products.Any())
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Products in this Category</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>SKU</th>
                                        <th>Product Name</th>
                                        <th>Stock</th>
                                        <th>Buying Price</th>
                                        <th>Selling Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr>
                                            <td>@product.SKU</td>
                                            <td>@product.Name</td>
                                            <td>
                                                <span class="badge @(product.StockQuantity <= product.MinimumStockLevel ? "bg-warning" : "bg-success")">
                                                    @product.StockQuantity
                                                </span>
                                            </td>
                                            <td>@product.BuyingPrice.ToString("C")</td>
                                            <td>@product.SellingPrice.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No products found in this category.
                </div>
            }
        </div>
        
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a asp-controller="Products" asp-action="Create" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus me-2"></i> Add New Product
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="fas fa-chart-bar me-2"></i> View Reports
                        </a>
                        <a asp-action="Index" class="list-group-item list-group-item-action">
                            <i class="fas fa-list me-2"></i> Back to Categories
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>